<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nontonkuy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NontonKuy">
        <activity
            android:name=".ui.favorite.FavoriteActivity"
            android:label="Favorites"
            android:parentActivityName=".ui.home.HomeActivity"
            android:theme="@style/Theme.NontonKuy.NoActionBar"/>
        <activity
            android:name=".ui.home.HomeActivity"
            android:label="Home" />
        <activity
            android:name=".ui.detail.SeriesDetailActivity"
            android:label="Detail TV Show"
            android:parentActivityName=".ui.home.HomeActivity"
            android:theme="@style/Theme.NontonKuy.NoActionBar" />
        <activity
            android:name=".ui.detail.MovieDetailActivity"
            android:label="Detail Movie"
            android:parentActivityName=".ui.home.HomeActivity"
            android:theme="@style/Theme.NontonKuy.NoActionBar" />
        <activity android:name=".ui.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>